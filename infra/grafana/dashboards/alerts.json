{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Total de Alertas Disparados",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(alerts_triggered_total)",
          "legendFormat": "Disparados"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Total de Alertas Normalizados",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(alerts_normalized_total)",
          "legendFormat": "Normalizados"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "blue", "value": null },
              { "color": "green", "value": 10 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Alertas Ativos (estimativa)",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "max(sum(alerts_triggered_total) - sum(alerts_normalized_total), 0)",
          "legendFormat": "Ativos"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 50,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "orange", "value": 15 },
              { "color": "red", "value": 30 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Alertas por Tipo",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (alert_type) (alerts_triggered_total)",
          "legendFormat": "{{alert_type}}"
        }
      ]
    },
    {
      "title": "Normalizacoes por Tipo",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (alert_type) (alerts_normalized_total)",
          "legendFormat": "{{alert_type}}"
        }
      ]
    },
    {
      "title": "Timeline - Alertas Disparados",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(alerts_triggered_total[5m])",
          "legendFormat": "Disparado - {{alert_type}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "bars", "fillOpacity": 50 },
          "color": { "mode": "palette-classic" },
          "unit": "reqps"
        },
        "overrides": []
      }
    },
    {
      "title": "Timeline - Alertas Normalizados",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 22 },
