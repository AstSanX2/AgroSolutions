            ]
          },
          {
            "matcher": { "id": "byName", "options": "Ativo" },
            "properties": [
              {
                "id": "custom.cellOptions",
                "value": { "type": "color-text" }
              },
              {
                "id": "mappings",
                "value": [
                  { "type": "value", "options": { "true": { "color": "red", "text": "Ativo" }, "false": { "color": "green", "text": "Resolvido" } } }
                ]
              }
            ]
          }
