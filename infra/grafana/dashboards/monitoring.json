                  { "type": "regex", "options": { "pattern": ".*Alta.*|.*High.*|.*Intensa.*", "result": { "color": "orange" } } },
                  { "type": "regex", "options": { "pattern": ".*Seca.*|.*Dry.*", "result": { "color": "yellow" } } }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Sensor" },
            "properties": [
              {
                "id": "mappings",
                "value": [
                  { "type": "value", "options": { "Humidity": { "text": "Umidade" }, "Temperature": { "text": "Temperatura" }, "Rainfall": { "text": "Precipitacao" } } }
