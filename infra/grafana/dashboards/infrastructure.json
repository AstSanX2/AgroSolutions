  "panels": [
    {
      "title": "Requisicoes HTTP por Servico",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (service_name) (rate(http_server_request_duration_seconds_count[5m]))",
          "legendFormat": "{{service_name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "fillOpacity": 15 },
          "unit": "reqps"
        },
        "overrides": []
      }
    },
    {
      "title": "Latencia P95 por Servico (ms)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, service_name) (rate(http_server_request_duration_seconds_bucket[5m]))) * 1000",
          "legendFormat": "{{service_name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "fillOpacity": 10 },
          "unit": "ms"
        },
        "overrides": []
      }
    },
    {
      "title": "Leituras de Sensores",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(sensor_readings_total) or vector(0)",
          "legendFormat": "Leituras"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "blue", "value": null },
              { "color": "green", "value": 100 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Alertas Ativos",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "max(sum(alerts_triggered_total) - sum(alerts_normalized_total), 0) or vector(0)",
          "legendFormat": "Ativos"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Taxa de Erros HTTP (5xx)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (service_name) (rate(http_server_request_duration_seconds_count{http_response_status_code=~\"5..\"}[5m]))",
          "legendFormat": "{{service_name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "bars", "fillOpacity": 50 },
          "color": { "mode": "palette-classic" },
          "unit": "reqps"
        },
        "overrides": []
      }
    },
    {
      "title": "Mensagens RabbitMQ Publicadas",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(sensor_readings_published_total[5m])",
          "legendFormat": "Sensor readings publicadas"
        },
        {
