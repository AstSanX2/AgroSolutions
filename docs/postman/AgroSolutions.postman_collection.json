      ]
    },
    {
      "name": "5. Health Checks",
      "item": [
        {
          "name": "Gateway Health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Identity Health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5001/health",
              "host": ["http://localhost:5001"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Identity Readiness",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5001/health/ready",
              "host": ["http://localhost:5001"],
              "path": ["health", "ready"]
            }
          }
        }
      ]
    }
  ]
}
