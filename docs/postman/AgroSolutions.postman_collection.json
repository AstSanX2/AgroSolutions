{
  "info": {
    "name": "AgroSolutions",
    "description": "Colecao completa de endpoints da plataforma AgroSolutions",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "propertyId",
      "value": ""
    },
    {
      "key": "plotId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "1. Auth",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var json = pm.response.json();",
                  "    pm.collectionVariables.set('token', json.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Daniel Silva\",\n  \"email\": \"daniel@agrosolutions.com\",\n  \"senha\": \"Senha@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/identity/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "identity", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var json = pm.response.json();",
                  "    pm.collectionVariables.set('token', json.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"daniel@agrosolutions.com\",\n  \"senha\": \"Senha@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/identity/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "identity", "auth", "login"]
            }
          }
        },
        {
          "name": "Me (Get Profile)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/identity/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "identity", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Properties",
      "item": [
        {
          "name": "Create Property",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var json = pm.response.json();",
                  "    pm.collectionVariables.set('propertyId', json.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Fazenda Santa Maria\",\n  \"endereco\": \"Rodovia SP-310, km 120 - Sao Carlos, SP\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/property",
              "host": ["{{baseUrl}}"],
              "path": ["api", "property"]
            }
          }
        },
        {
          "name": "List Properties",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/property?page=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "property"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "pageSize", "value": "10" }
              ]
            }
          }
        },
        {
          "name": "Get Property by ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/property/{{propertyId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "property", "{{propertyId}}"]
            }
          }
        },
        {
          "name": "Update Property",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Fazenda Santa Maria Atualizada\",\n  \"endereco\": \"Rodovia SP-310, km 125 - Sao Carlos, SP\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/property/{{propertyId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "property", "{{propertyId}}"]
            }
          }
        },
        {
          "name": "Delete Property",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/property/{{propertyId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "property", "{{propertyId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Plots",
      "item": [
        {
          "name": "Create Plot",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var json = pm.response.json();",
                  "    pm.collectionVariables.set('plotId', json.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Talhao Norte\",\n  \"area\": 150.5,\n  \"latitude\": -22.0087,\n  \"longitude\": -47.8909,\n  \"culturaNome\": \"Soja\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/property/{{propertyId}}/plots",
              "host": ["{{baseUrl}}"],
              "path": ["api", "property", "{{propertyId}}", "plots"]
            }
          }
        },
        {
          "name": "List Plots",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/property/{{propertyId}}/plots",
              "host": ["{{baseUrl}}"],
              "path": ["api", "property", "{{propertyId}}", "plots"]
            }
          }
        },
        {
          "name": "Get Plot by ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/property/{{propertyId}}/plots/{{plotId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "property", "{{propertyId}}", "plots", "{{plotId}}"]
            }
          }
        },
        {
          "name": "Update Plot",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Talhao Norte Atualizado\",\n  \"area\": 200.0,\n  \"latitude\": -22.0087,\n  \"longitude\": -47.8909,\n  \"culturaNome\": \"Milho\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/property/{{propertyId}}/plots/{{plotId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "property", "{{propertyId}}", "plots", "{{plotId}}"]
            }
          }
        },
        {
          "name": "Delete Plot",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/property/{{propertyId}}/plots/{{plotId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "property", "{{propertyId}}", "plots", "{{plotId}}"]
            }
          }
        }
      ]
    },
    {
