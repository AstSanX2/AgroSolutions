        {
          "name": "Get Sensor History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/sensors/{{propertyId}}/{{plotId}}?page=1&pageSize=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sensors", "{{propertyId}}", "{{plotId}}"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "pageSize", "value": "20" }
              ]
            }
          }
        },
        {
          "name": "Get Latest Readings",
          "request": {
            "method": "GET",
