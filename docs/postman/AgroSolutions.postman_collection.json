            "body": {
              "mode": "raw",
              "raw": "{\n  \"propertyId\": \"{{propertyId}}\",\n  \"plotId\": \"{{plotId}}\",\n  \"value\": 15.0,\n  \"timestamp\": \"2025-01-15T11:00:00Z\"\n}"
            },
